package com.example.demo.validator;

import java.lang.annotation.Documented;
import java.lang.annotation.ElementType;
import java.lang.annotation.Retention;
import java.lang.annotation.RetentionPolicy;
import java.lang.annotation.Target;

import javax.validation.Constraint;
import javax.validation.Payload;

import com.example.demo.model.OrdineAcquisto;

@Target({ElementType.METHOD, ElementType.FIELD, ElementType.ANNOTATION_TYPE})
@Retention(RetentionPolicy.RUNTIME)
@Constraint(validatedBy = MaxImportoImpl.class)
@Documented
public @interface MaxImporto {
	
	public String message() default "Non è possibile inserire un importo così elevato";
	
	public String errore() default 
	
	public Class<?>[] groups() default {};
	
	public abstract Class<? extends Payload>[] payload() default {};

}
